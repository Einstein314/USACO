    cin >> n;
    int lengths[n];
    if (n % 4 == 1 || n%4 == 2){
        cout << "NO";
    }
    else{
        cout << "YES\n";
        if (n % 4 == 0){
            cout << n/2 << "\n";
            FOR(i, 1, n/4 + 1){
                cout << i << " ";
            }
            FORd(i, 1, n/4 + 1){
                cout << n + 1 - i << " ";
            }
            cout << "\n" << n/2 << "\n";
            FOR(i, n/4 + 1, n + 1 - n/4) {
                cout << i << " ";
            }
        }
        else{
            cout << (n+1)/2 << "\n";
            FOR(i, 1, (n+1)/4 + 1){
                cout << i << " ";
            }
            FORd(i, 1, (n+1)/4 + 1){
                cout << n - i << " ";
            }
            cout << "\n" << (n-1)/2 << "\n";
            FOR(i, (n+1)/4 + 1, n  - (n+1)/4){
                cout << i << " ";
            }
            cout << n;


        }





    }




    return 0;

