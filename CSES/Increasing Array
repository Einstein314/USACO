    ios::sync_with_stdio(0);
    cin.tie(0);

    cin >> n;
    F0R(i, n){
        cin >> arr[i];
    }
    ll turns = 0;
    FOR(i, 1, n){
        if (arr[i] < arr[i-1]){
            ll diff = arr[i-1] - arr[i];
            turns += diff;
            arr[i] += diff;
        }
        else{
            continue;
        }

    }
    cout << turns;




    return 0;

}








