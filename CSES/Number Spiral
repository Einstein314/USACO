    ios::sync_with_stdio(0);
    cin.tie(0);

    cin >> t;
    F0R(i, t){
        cin >> y >> x;
        if (x == y){
            ll ans = pow(x ,2) - x + 1;
            cout << ans << "\n";
        }
        else if (x > y){
            ll s = (x - (x+1) % 2) * (x - (x+1) % 2) + ((x+1) % 2);
            if (x % 2 == 0){
                cout << s + (y - 1) << "\n";
            }
            else{
                cout << s - (y-1) << "\n";
            }
        }
        else{
            ll s = (y - y % 2) * (y - y % 2) + y % 2;
            if (y % 2 == 0){
                cout << s - (x-1) << "\n";
            }
            else{
                cout << s + (x-1) << "\n";
            }
        }

    }


    return 0;

}








